{
  "manifest_version": 2,
  "name": "Twitch Live Notifier",
  "version": "1.0",
  "description": "Opens a specific Twitch channel when they go live.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
	"tabs",
    "alarms",
    "https://api.twitch.tv/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}